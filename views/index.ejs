<!DOCTYPE html>
<html lang="en">
<head>
 
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <style>
    .b {
    background-color: rgb(0, 0, 0);}
    h1   {color: rgb(255, 255, 255);
    text-align: center;
    padding-top:  1em;
    padding-bottom: 1em;
  }
  .text{color: rgb(255, 255, 255);

  }
  .tbl{color: rgb(255, 255, 255);
    padding-left: 10%;

}



    </style>
 
  <title>URL Shortener</title>
  
</head>
<body class="b">
  <div class="container">
    <h1>URL SHORTENER</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
      <label for="fullUrl" class="sr-only">Url</label>
      <input required placeholder="URL" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
      <button class="btn btn-dark " type="submit">Shorten</button>
    </form>

    <table class="table table-dark ">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Full URL</th>
          <th scope="col">Short URL</th>
          <th scope="col">#Clicks</th>
        </tr>
      </thead>
      <tbody>
        
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><%= shortUrl.count %></td>
            <td class="text-break"><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
   
  </div>
</body>
</html>